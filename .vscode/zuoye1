#include <iostream>
using namespace std;


#define STUDENT_COUNT 3  
#define COURSE_COUNT 2   
#define MAX_NAME_LEN 20  

int main() {
    char names[STUDENT_COUNT][MAX_NAME_LEN];
    float scores[STUDENT_COUNT][COURSE_COUNT];
    float total[STUDENT_COUNT] = { 0 };
    float average[STUDENT_COUNT] = { 0 };

    cout << "请输入" << STUDENT_COUNT << "个学生的姓名和"
        << COURSE_COUNT << "门课成绩：" << endl;

    for (int i = 0; i < STUDENT_COUNT; i++) {
        cout << "第" << (i + 1) << "个学生的姓名：";
        cin.getline(names[i], MAX_NAME_LEN);

        if (names[i][0] == '\0') {
            cin.getline(names[i], MAX_NAME_LEN);
        }
        for (int j = 0; j < COURSE_COUNT; j++) {
            cout << "第" << (j + 1) << "门课成绩：";
            cin >> scores[i][j];
            total[i] += scores[i][j];
        }
        average[i] = total[i] / COURSE_COUNT;
        cin.ignore();
    }

    cout << "\n===== 成绩统计 =====" << endl;
    cout << "姓名\t";
    for (int j = 0; j < COURSE_COUNT; j++) {
        cout << "第" << (j + 1) << "课\t";
    }
    cout << "总分\t平均分" << endl;
    for (int i = 0; i < STUDENT_COUNT; i++) {
        cout << names[i] << "\t";
        for (int j = 0; j < COURSE_COUNT; j++) {
            cout << scores[i][j] << "\t";
        }
        cout << total[i] << "\t" << average[i] << endl;
    }

    return 0;
}
